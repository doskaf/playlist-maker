<% if logged_in? %>
    <%= link_to "View Playlist Categories", categories_path %>
    <%= "•" %>
    <%= link_to "View All Playlists", playlists_path %>
    <%= "•" %>
    <%= link_to "View All Songs", songs_path %>
    <%= "•" %>
    <%= link_to "Create a Playlist", new_playlist_path %>
    <%= "•" %>
    <%= link_to "Create a Song", new_song_path %>
    <%= "•" %>
    <%= link_to "My Profile", user_path(current_user) %><br><br>
    <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
        <input type=submit value='Logout'>
    <% end %><br>
<% else %>
    <%= link_to "Log In", login_path %>
    <%= "•" %>
    <%= link_to "Sign Up", signup_path %>
    <%= "•" %>
    <%= link_to "Log in with Github", "/auth/github" %>
<% end %>