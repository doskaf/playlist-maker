<h3><%= @playlist.name %></h3>
<h4>Created by <%= link_to @playlist.user.username, user_path(@playlist.user) %></h4><br><br>

<% @playlist.songs.each do |song| %>
    <li><b><%= song.title %></b> by <b><%= song.artist %></b></li>
<% end %><br><br>

<% if playlist_owner? %>
  <%= form_tag playlist_path(@playlist.id), method: "delete" do %>
    <%= submit_tag "Delete #{@playlist.name}" %>
  <% end %>
<% end %>