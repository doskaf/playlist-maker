<h3>Create a Song</h3><br><br>

<%= form_for @song do |f| %>

    <% if @song.errors.any? %>
        <div id="error_explanation">
            <h3>
              <%= pluralize(@song.errors.count, "error") %>
              prohibited this song from being created:
            </h3>

            <ul>
            <% @song.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
        </div><br>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title %><br><br>
    <%= f.label :artist %>
    <%= f.text_field :artist %><br><br>
    <%= f.submit %>
<% end %>